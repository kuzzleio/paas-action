{
  "compilerOptions": {
    "lib": [
      "ES6"
    ],
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "rootDir": "src/",
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}